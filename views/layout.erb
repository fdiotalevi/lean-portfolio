      <h1>Projects</h1>
    
      <% @projects.each do |project| %>
      <div class="project"><a href='/collection/<%=project.safe_name %>'><%=project.name %></a></div>
      <% end %>
    </td>
    
    
    <td id="content">
      <%= yield %> 
    </td>
  </tr>
</table>  
</body>
</html>
